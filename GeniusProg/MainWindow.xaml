<Window x:Class="GeniusProg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeniusProg"
        mc:Ignorable="d"
        Background="{DynamicResource Primary}"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Background="{DynamicResource Secondary}" x:Name="Change" Content="Менять стиль на тру" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="300" Click="Change_Click"/>
        <Button Background="{DynamicResource Secondary}" x:Name="FunBut"  Content="Менять стиль на фэшн" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="60" Width="300" Click="FunBut_Click"/>

    </Grid>
</Window>
